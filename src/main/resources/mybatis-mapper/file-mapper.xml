<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hh.board.domain.file.FileMapper">

    <!--    file 테이블 전체 컬럼   -->
    <sql id="fileColumns">
          file_id
        , post_id
        , file_original_name
        , file_name
        , file_path
        , file_size
        , status
    </sql>

    <!--    파일 업로드  -->
    <insert id="saveFile" parameterType="com.hh.board.domain.file.FileVo" useGeneratedKeys="true" keyProperty="postId">
        INSERT INTO file(
            <include refid="fileColumns"></include>
        )
        VALUES (
              #{fileId}
            , #{postId}
            , #{fileOriginalName}
            , #{fileName}
            , #{filePath}
            , #{fileSize}
            , 1
        )
    </insert>

    <!--    postId에 해당하는 파일 리스트 가져오기   -->
    <select id="findAllFileByPostId" parameterType="int" resultType="com.hh.board.domain.file.FileVo">
        SELECT
            <include refid="fileColumns"></include>
        FROM
            file
        WHERE
            post_id = ${postId}
            AND status = 1
        ORDER BY
            file_id ASC
    </select>

    <!--    파일 id에 해당하는 파일 가져오기  -->
    <select id="findFileById" parameterType="int" resultType="com.hh.board.domain.file.FileVo">
        SELECT
            <include refid="fileColumns"></include>
        FROM
            file
        WHERE
            file_id = ${fileId}
            AND status = 1
    </select>

    <!--    파일 삭제 구현 ( state를 0으로 만든다 )   -->
    <update id="deleteFileById" parameterType="int">
        UPDATE
            file
        SET
            status = 0
        WHERE
            file_id = #{fileId}
    </update>

<!--    파일 리스트 저장   -->
    <insert id="saveAllFile" parameterType="list">
        INSERT INTO file (
            <include refid="fileColumns"></include>
        ) VALUES
        <foreach collection="list" item="file" separator=",">
        (
              #{fileId}
            , #{postId}
            , #{fileOriginalName}
            , #{fileName}
            , #{filePath}
            , #{fileSize}
            , 1
        )
        </foreach>
    </insert>

<!--    파일 리스트 조회   -->
    <select id="findAllFileByIds" parameterType="list" resultType="com.hh.board.domain.file.FileVo">
        SELECT
            <include refid="fileColumns"></include>
        FROM
            file
        WHERE
            status = 1
            AND file_id IN
            <foreach collection="list" item="fileId" open="(" separator="," close=")">
                #{fileId}
            </foreach>
        ORDER BY
            file_id ASC
    </select>

<!--    파일 삭제   -->
    <delete id="deleteAllFileByIds" parameterType="list">
        UPDATE
            file
        SET
            status = 0
        WHERE
            file_id IN
            <foreach collection="list" item="fileId" open="(" separator="," close=")">
                #{fileId}
            </foreach>
    </delete>


</mapper>